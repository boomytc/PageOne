@model db.view.af_AuditCenter
@{
    ViewBag.Title = "审批中心";
}

@section header
{
    <style type="text/css">
    </style>
    <script type="text/javascript">
        //刷新当前页面的数据
        function refleshData(exeCountSql) {
            $("#container").pager("reflesh", exeCountSql);
        }
        //初始化分页
        $(function () {
            $("#container").pager();
        });

    </script>
}
<div class="container" id="container" data-width="@Model.PageWidth" data-url="/admin/af_AuditCenter/select">
    <div class="search">
        <span>单据类型：@Html.DropDownListFor(a => a.auditTypeCode, db.bll.af_AuditType.bindDdl(true))</span>
        <span>所属部门：@Html.DropDownListFor(a => a.deptCode, db.bll.sbs_Dept.bindDdl())</span>
        <span>单据编号：@Html.TextBoxFor(a => a.relatedKeyCode)</span>
        <span>送审时间：@Html.TextBoxDateFor(a=>a.createDateStart)~@Html.TextBoxDateFor(a=>a.createDataEnd)</span>
        <span>审批时间：@Html.TextBoxDateFor(a=>a.auditDateStart)~@Html.TextBoxDateFor(a=>a.auditDataEnd)</span>
    </div>
    <div class="toolbar">
        <a class="opSearch">查询</a>
    </div>
    <div class="pager"></div>
    <div class="showData">
        @{Html.RenderPartial("_ShowData");}
    </div>
</div>
