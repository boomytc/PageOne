@model db.rbac_Resource

@{
    ViewBag.Title = "Detail";
}

    <div class="dialog">
        <div class="display-label hide">
            @Html.DisplayNameFor(model => model.rowID)
        </div>
        <div class="display-field hide">
            @Html.DisplayFor(model => model.rowID)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.resourceCode)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.resourceCode)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.resourceName)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.resourceName)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.moduleCode)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.moduleCode)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.showOrder)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.showOrder)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.haveOperations)
        </div>
        <div class="display-field three">
            @Html.DisplayFor(model => model.haveOperations)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.resourceUrl)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.resourceUrl)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.opControl)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.opControl)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.dataControl)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.dataControl)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.pageWidth)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.pageWidth)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.isShow)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.isShow)
        </div>

        <fieldset>
            <legend>
                资源权限
            </legend>
            <div>
                @Html.Action("SelectPartial", "rbac_ResourceOp", new { upCode = Model.resourceCode, opMode = "Detail" })
            </div>
        </fieldset>

        <fieldset>
            <legend>
                @Html.LabelFor(model => model.remark)
            </legend>
            <div>
                @Html.Raw(Model.remark)
            </div>
        </fieldset>
        <p class="button">
            <a class="opClose">关闭</a>
        </p>
    </div>

<fieldset>
    <legend>相关附件</legend>
    @{
        var routeValue = new
        {
            attachResourceCode = "rbac_Resource",
            attachKeyCode = Model.resourceCode,
            attachOpMode = "Detail"
        };
    }
    @Html.Action("SelectPartial", "sys_BillAttach", routeValue)
</fieldset>