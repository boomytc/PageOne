@model db.view.sv_bks_Order
@{
    ViewBag.Title = "订单管理";
}
@section header
{
    <style type="text/css">
    </style>
    <script type="text/javascript">
        //刷新当前页面的数据
        function refleshData(exeCountSql) {
            $("#container").pager("reflesh", exeCountSql);
        }
        //初始化分页
        $(function () {
            $("#container").pager();
        });
    </script>
}
@{ string ctrl = ViewContext.RouteData.Values["controller"].ToString(); }
<div class="container" id="container" data-width="@Model.PageWidth" data-url="/admin/sv_bks_Order/Select">
    <div class="search">
        <span>图书编号：@Html.TextBoxFor(a => a.bookCode)</span>
        <span>用户编号：@Html.TextBoxFor(a => a.customerCode)</span>
        <span>下单日期：@Html.TextBoxDateFor(a => a.orderDateStart)~@Html.TextBoxDateFor(a => a.orderDateEnd)</span>
    </div>
    <div class="toolbar">
        <a class="opSearch">查询</a>
    </div>
    <div class="pager"></div>
    <form id="form">
        <div class="showData cbxCol">
            @{Html.RenderPartial("_ShowData");}
        </div>
    </form>
</div>





