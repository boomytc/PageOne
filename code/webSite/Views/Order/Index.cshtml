@model db.client.view.sv_bks_OrderInfo

@{
    ViewBag.Title = "订单信息";
}

<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<html>
<body>
    <style type="text/css">
    </style>
    <script type="text/javascript">
        //刷新当前页面的数据
        function refleshData(exeCountSql) {
            $("#container").pager("reflesh", exeCountSql);
        }
        //初始化分页
        $(function () {
            $("#container").pager();
        });
    </script>

    @{ string ctrl = ViewContext.RouteData.Values["controller"].ToString(); }


    <div style="width:1200px; margin-left:auto; margin-right:auto;">
        @*顶部布局*@
        <div class="pure-menu pure-menu-horizontal">
            <a class="pure-menu-heading" href="~/Store/Index"><img src="~/images/PageOneLOGO1.jpg" style="width: 120px; height: 40px;" alt="PageOne" /></a>
            <ul class="pure-menu-list">
                <li class="pure-menu-item pure-menu-selected">
                    <a href="~/Store/Index" class="pure-menu-link">首页</a>
                </li>
                <li class="pure-menu-item">
                    <a href="~/Shopping/Index" class="pure-menu-link">个人中心</a>
                </li>
                <li class="pure-menu-item">
                    <a href="~/UserLogin/Login" style="">退出登录</a>
                </li>
            </ul>
        </div>

        @*侧边信息分类布局*@
        <div class="left" style="float:left; width:18%;">
            @Html.Action("orderTypeNav", "Shopping")
        </div>

        <div class="right" style="float:right; width:80%;">
            <div class="container" id="container" data-width="@Model.PageWidth" data-url="/Order/Index">
                <div class="search">
                    <span>订单日期：@Html.TextBoxDateFor(a => a.orderDateStart)~@Html.TextBoxDateFor(a => a.orderDateEnd)</span>
                    <a class="opSearch">查询</a>
                </div>
                <div class="pager"></div>
                <div class="showData" style="margin-top:50px;">
                    @{Html.RenderPartial("_ShowData");}
                </div>
            </div>
        </div>
    </div>


</body>
</html>

