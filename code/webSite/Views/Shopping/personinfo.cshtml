@model db.bks_Customer

@{
    ViewBag.Title = "个人信息修改";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style type="text/css">
    input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        margin-bottom: 5px;
    }

    button {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }

    

</style>
<script type="text/javascript">
        $(document).ready(function () {
            closeInfo();
        });
        //刷新当前页面的数据
        function refleshData(exeCountSql) {
            $("#container").pager("reflesh", exeCountSql);
        }
        //初始化分页
        $(function () {
            $("#container").pager();
        });
        function updateInfo() {
            const phone = document.getElementById("phone");
            const password = document.getElementById("password");
            const email = document.getElementById("email");
            phone.disabled = false;
            password.disabled = false;
            email.disabled = false;
        }
        function closeInfo() {
            const phone = document.getElementById("phone");
            const password = document.getElementById("password");
            const email = document.getElementById("email");
            phone.disabled = true;
            password.disabled = true;
            email.disabled = true;
        }
</script>

@{ string ctrl = ViewContext.RouteData.Values["controller"].ToString(); }


<div style="width:1200px; margin-left:auto; margin-right:auto;">
    @*顶部布局*@
    <div class="pure-menu pure-menu-horizontal">
        <a class="pure-menu-heading" href="~/Store/Index"><img src="~/images/PageOneLOGO1.jpg" style="width: 120px; height: 40px;" alt="PageOne" /></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item pure-menu-selected">
                <a href="~/Store/Index" class="pure-menu-link">首页</a>
            </li>
            <li class="pure-menu-item">
                <a href="~/Shopping/Index" class="pure-menu-link">个人中心</a>
            </li>
            <li class="pure-menu-item">
                <a href="~/Store/Index" style="">退出登录</a>
            </li>
        </ul>
    </div>

    @*侧边信息分类布局*@
    <div class="left" style="float:left; width:18%;">
        @Html.Action("orderTypeNav", "Shopping")
    </div>
    <div class="right" style="float:right; width:80%;">
        <div class="showData noTable" style="margin-top:50px;">
            <button onclick="updateInfo()">修改</button>
            @using (Html.BeginForm("UpdateByPerson", "Shopping", FormMethod.Post))
            {<p>用户名：<input type="text" disabled id="name" name="name" value="@Model.customerName"></p>
                <p>密码：<input type="text" disabled id="password" name="password" value="@Model.password"></p>
                <p>手机：<input type="tel" disabled id="phone" name="phone" value="@Model.telephone"></p>
                <p>邮箱：<input type="email" disabled id="email" name="email" value="@Model.email"></p>
                <button type="submit">确认</button>
            }
        </div>
    </div>
</div>

