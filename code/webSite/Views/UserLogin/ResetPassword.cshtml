            $('form').submit(function () {
                if ($(this).data('submitted') === true) {
                    // 防止重复提交
                    return false;
                } else {
                    // 标记表单已提交
                    $(this).data('submitted', true);
                    // 禁用所有提交按钮
                    $(':submit', this).attr('disabled', 'disabled');
                    // 让表单正常提交
                    return true;
                }
            });
        });
